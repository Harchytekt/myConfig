############### Functions ###############

# Git
gitAddRemote() {
    git remote add origin $1
}
gitCommit() {
    git commit -m "$1"
}
gitMerge() {
    git merge --no-ff $1
}
gitCheckout() {
    git checkout -b $1
}
githubNewFiles() {
    echo '# Introduction' >> README.md
    touch .gitignore
    git init
    git remote add origin $1
    git pull origin master
    git add .
    git commit -m 'First commit'
    git push -u origin master
}
gitPull() {
    git pull origin $1
}
gitPush() {
    git push origin $1
}

# Programming
javaParam() {
    # Use the given param to compile and run Java code
    if [ "$@" = "$" ]; then
        javac *.java
        java Main
    else
        javac "$@".java
        java "$@"
    fi
}
javacParam() {
    # Use the given param to compile Java code
    if [ "$@" = "$" ]; then
        javac *.java
    fi
}

# Tools
genPwd() {
    pwd=`env LC_CTYPE=C tr -dc "a-zA-Z0-9-_\$\?\!\*\#\=\.\&\@\"\%\'\(\)\+\,\-\/\:\;\<\=\>\~\^\_" < /dev/urandom | head -c "$@"`
    echo $pwd
    echo $pwd | pbcopy | echo '=> Password copied to pasteboard.'
}
